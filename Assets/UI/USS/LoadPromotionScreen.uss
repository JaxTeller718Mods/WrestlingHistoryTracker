#root {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
}

Label {
    color: white;
    -unity-text-align: middle-center;
}

Button {
    /* Allow buttons to expand to available width */
    min-width: 200px;
    height: 35px;
    margin-top: 5px;
    align-self: stretch;
}

ScrollView {
    width: 400px;
    height: 300px;
    margin-bottom: 20px;
    align-self: center;
}
